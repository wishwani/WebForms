<% include ../partials/Submit/essayForm %>
<div class="col-md-9">
					<div class="container-fluid" id="inside" style="border:1px solid #444242; color: white;">
						<div class="inbox-body">
							<div>
								
								<table class="table table-inbox table-hover">
	                <tbody>
	                  	<tr class="unread">
		                    <td style="width: 50%">SurveyId:  <%= esurvey._id %></td>
										 		<td style="width: 50%">SurveyName:  <%= esurvey.surveyname %></td>	                  	
	                  	</tr>               
	                </tbody>
             		</table>
						  
					      <form action="/SubmitSurvey" method="post" id="testformid">
								<div>
								<% for (index=0;index<esurvey.question.length;index++) { %>
								<div>
									<p><font color="#28F397" size="4"><%= esurvey.question[index].value %></font></p>
									<div class="form-group">
										<div>
											<textarea cols="75" form ="testformid" name="<% esurvey.question[index].value %>" placeholder="Enter your message" required="required" rows="3"></textarea>
										</div>
									</div>
								</div>
								<% } %>
								</div>
							  </form>

							

							<div>
								<button type="submit" class="btn btn-default">Register</button>
							</div>

						</div>
					</div>
				</div>
				
			</div>