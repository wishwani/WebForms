<!DOCTYPE html>
<html >
  <head>
		<% include ../partials/Common/head %>
  </head>

  <body ng-app="app">
    <% include ../partials/Common/header %>

			<div class="section">
				<div class="col-md-3">
					<ul class="nav nav-pills nav-stacked">
							<li><a href="/AdminDatabase/register">Register New Employee</a></li>
							<li><a href="/AdminDatabase/viewUser">View Employee Details</a></li>
							<li><a href="#">Delete Employee</a></li>
						</ul>
				</div>


				<div class="col-md-9">

					<div class="container-fluid" id="inside" style="border:1px solid #444242; color: white;">
						<div class="inbox-body">
							<div class="col-md-8">

								<table class="table table-inbox">
	                <tbody>
										<div style="height: 10px;">
										<tr><center><b><h2><%= users.username %></h2></b></center></li></tr>
										</div>
										<div style="height: 8px;">
											<tr><font color="#28F397" size="4">User Id:</font>  <%= users.id %></tr>
										</div>
										<div style="height: 8px;">
											<tr><font color="#28F397" size="4">Date of Birth:</font>  <%= users.dateOfBirth %></tr>
										</div>
										<div style="height: 8px;">
											<tr><font color="#28F397" size="4">Telephone Number:</font>  <%= users.telephoneNo %></tr>
										</div>
										<div style="height: 8px;">
											<tr><font color="#28F397" size="4">Address:</font>  <%= users.address %></tr>
										</div>
										<div style="height: 8px;">
											<tr><font color="#28F397" size="4">Email:</font>  <%= users.email %></tr>
										</div>
										<div style="height: 8px;">
											<tr><font color="#28F397" size="4">Facebook ID:</font>  <%= users.fb_Id %></tr>
										</div>
										<div style="height: 8px;">
											<tr><font color="#28F397" size="4">Job Title:</font>  <%= users.jobTitle %></tr>
										</div>
				          </tbody>
				        </table>

							</div>
							<div class="col-md-4">
								<img src="/images/<%= users.imageURL %>.jpg" height="200px" width="250px"/>
							</div>
						</div>

						<div>
							<div class="col-sm-offset-3 col-sm-9">
								<a href="/AdminDatabase/viewUser/updateEmployee/<%= users.id %>"><button class="btn btn-default">Edit User</button></a>
								<button type="submit" class="btn btn-danger" data-toggle="modal" data-target="#myModaldel"  method="post">Delete</button>

									<div class="modal fade" id="myModaldel" role="dialog">
							    	<div class="modal-dialog modal-sm">
							      	<div class="modal-content">
							        	<div class="modal-header">
							          	<button type="button" class="close" data-dismiss="modal">&times;</button>
							          	<h4 class="modal-title">Do you want to delete <%= users.id %> ?</h4>
							        	</div>
							        	<div class="modal-footer">
													<div>
														<form class="form-horizontal" role="form" action="/AdminDatabase/viewUser/updateEmployee/delete/<%= users._id %>" method="post">
															<div class="form-group">
																	<div class="col-sm-offset-3 col-sm-9">
																		<button type="submit" class="btn btn-default">Yes</button>
																		<button type="button" class="btn btn-default" data-dismiss="modal">No</button>
																	</div>
															</div>
														</form>	
													</div>    
							        	</div>
							      	</div>
							    	</div>
						  		</div>
						  	</div>	
							</div>
						</div>
					</div>				
			</div>
		</div>

		 
  </body>
</html>
