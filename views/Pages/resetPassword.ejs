<!DOCTYPE html>
<html >
  <head>
  	 <% include ../partials/Common/head %>	
  </head>

  <body ng-app="app">
    
    <div class="section">
			<nav class="navbar navbar-default navbar-fixed-top role="navigation"/>
				<div class="container-fluid">
					<div class="navbar-header">
						<img src='/images/Logo.png' height="50px" align="left" />
						<a class="navbar-brand" href="#">WebForms</a>
					</div>
					<ul class="nav navbar-nav navbar-right">
						<li><a href="#">Home</a></li>
						<li><a href="#">About</a></li>			
					</ul>
				</div>
			</nav>
    </div></br></br></br></br></br></br>
  
		<div class="col-md-12">
					<div class="container-fluid" id="inside" style="border:1px solid #444242;"  id="register" ng-controller="registerCtrl">
						<h1>Enter Employee Details</h1>
						 <form class="form-horizontal" role="form" action="/resetPassword/<%= users.username %>" method="post">
							<div class="form-group">
								<label class="control-label col-sm-3" for="name">UserName</label>
								<div class="col-sm-9">
									<input type="text" class="form-control" name="username" id="ename" placeholder="Employee Name" >
								</div>
							</div>
				      
							<div class="form-group">
								<label class="control-label col-sm-3" for="pwd">Password</label>
								<div class="col-sm-9">
									<input type="Password" class="form-control" name="password" id="password" placeholder="Password">
								</div>
							</div>

							<div class="form-group">
								<label class="control-label col-sm-3" for="pwd">Repeat Password</label>
								<div class="col-sm-9">
									 <input type="password" class="form-control" name="confirm_password" id="confirm_password" placeholder="Repeat Password"/>
									 <span id='message'></span>
								</div>
							</div>
							
							<div class="form-group">
								<div class="col-sm-offset-3 col-sm-9">
									<button type="submit" class="btn btn-default">Reset</button>
								</div>
							</div>

						</form>
					</div>
						
				</div>
				
				<script type="text/javascript">
						$('#confirm_password').on('keyup', function () {
					    if ($(this).val() == $('#password').val()) {
					        $('#message').html('matching').css('color', '#4FFF42');
					    } else $('#message').html('not matching').css('color', 'red');
					});
				</script>
		
		 
  </body>
</html>
